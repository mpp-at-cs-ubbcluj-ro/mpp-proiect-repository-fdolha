<Window x:Class="ClientWPF.AddResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientWPF"
        mc:Ignorable="d"
        Title="AddResultWindow" Height="400" Width="320">
    <Grid>
        <Label Content="Adaugare Rezultat" HorizontalAlignment="Center" Margin="0,58,0,0" VerticalAlignment="Top" FontSize="18"/>
        <ComboBox x:Name="AthletesComboBox" HorizontalAlignment="Center" Margin="0,115,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="PointsTextBox" PreviewTextInput="NumberValidationForPointsTextBox" HorizontalAlignment="Center" Margin="0,156,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="CancelButton" Content="Anuleaza" HorizontalAlignment="Left" Margin="100,207,0,0" VerticalAlignment="Top" Click="CancelButton_Clicked"/>
        <Button x:Name="AddButton" Content="Adauga" HorizontalAlignment="Left" Margin="175,207,0,0" VerticalAlignment="Top" Click="AddButton_Clicked"/>

    </Grid>
</Window>
